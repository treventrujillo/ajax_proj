<h1>Characters in <%= @game.name %></h1>
<%= link_to 'Create Character', new_game_character_path, class: "btn" %>
<hr />

<% @game.characters.each do |character| %>
<div class="section">
  <h3><%= character.name %></h3>
  <p><%= character.power %></p>
  <%= link_to 'Edit Character', edit_game_character_path(@game, character), class: "btn" %>
  <%= link_to 'Delete Character', game_character_path(@game, character), method: :delete, class: "btn" %>
</div>
<hr />
<% end %>

<%= link_to 'Back', games_path, class: "btn" %>
