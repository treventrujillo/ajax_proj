<h2 class="center">Games</h2>
<hr />
<div class="row">
  <div class="col s12 m6">
    <button class="btn" id="toggle">Show Form</button>
    <ul id="games-list">
      <% @games.each do |game| %>
      <div class="divider"></div>
      <div class="section">
        <%= render partial: 'game', locals: { game: game } %>
      </div>
      <% end %>
    </ul>
  </div>
  <div class="col s12 m6" id="character-list">
    <h3 id="game">Characters in Game</h3>
    <ul id="characters">
    </ul>
  </div>
</div>
